<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.morasquad.switchme.SwitchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_margin="15dp"
       android:weightSum="4">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="2">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Device Name"
               android:id="@+id/switch_device_name"
               android:textSize="20sp"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="12dp"
               android:id="@+id/switch_device_id"
               android:text="Device ID"/>
       </LinearLayout>

       <android.support.v7.widget.SwitchCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="ON / OFF"
           android:id="@+id/onoff_switch"
           android:layout_gravity="center"
           android:theme="@style/SwitchCompatStyle"/>

   </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensors"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temprature"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"/>


                <com.github.anastr.speedviewlib.TubeSpeedometer
                    android:id="@+id/tubeSpeedometer"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:sv_minSpeed="0"
                    app:sv_maxSpeed="1024"
                    app:sv_unitTextColor="#ffffff"
                    app:sv_speedTextColor="#fff"
                    app:sv_textColor="#fff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/tem_text"
                    android:text="Temprature"
                    android:textAlignment="center"/>

                <com.txusballesteros.SnakeView
                    android:id="@+id/snake"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:strokeColor="@color/colorPrimaryDark"
                    android:layout_weight="2"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"/>

                <com.github.anastr.speedviewlib.TubeSpeedometer
                    android:id="@+id/tubeSpeedometer2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:sv_minSpeed="0"
                    app:sv_maxSpeed="1024"
                    app:sv_unitTextColor="#ffffff"
                    app:sv_speedTextColor="#fff"
                    app:sv_textColor="#fff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/hum_text"
                    android:text="Temprature"
                    android:textAlignment="center"/>

                <com.txusballesteros.SnakeView
                    android:id="@+id/snake1"
                    app:strokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="2"/>



            </LinearLayout>





        </LinearLayout>

        <com.rey.material.widget.CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            style="@style/Material.Drawable.CheckBox"
            android:id="@+id/events"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/event_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="false"
            android:weightSum="4">


                <com.rey.material.widget.Spinner
                    android:id="@+id/param"
                    style="@style/Material.Widget.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:clickable="false"
                    app:spn_labelEnable="false"
                    app:rd_style="@style/Material.Drawable.Ripple.Wave" />

                <com.rey.material.widget.Spinner
                    android:id="@+id/compare"
                    style="@style/Material.Widget.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:clickable="false"
                    app:rd_style="@style/Material.Drawable.Ripple.Wave" />


        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Enter Triggering Value "
            android:defaultFocusHighlightEnabled="false"
            android:id="@+id/triger_val"/>

        <com.rey.material.widget.Button
            android:id="@+id/set_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:padding="15dp"
            android:layout_marginTop="5dp"
            android:text="Set Event"
            android:enabled="false"
            style="@style/Material.Drawable.Ripple.Wave"
            android:textColor="@android:color/background_light"
            android:textSize="10dp" />

        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
</ScrollView>
